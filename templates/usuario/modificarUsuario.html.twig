<script>
$().ready = function() {
    $('#user_imagenPerfil').hide();
    $('#cargarURL').hide();
    
    $("#verURLPerfil").click(function() {
        $('#user_imagenPerfil').toggle();
        $('#cargarURL').toggle();
    });
}();

function newPoster(){
    document.getElementById("perfil").src = document.getElementById("user_imagenPerfil").value;

    $('#user_imagenPerfil').toggle();
    $('#cargarURL').toggle();
}
</script>

