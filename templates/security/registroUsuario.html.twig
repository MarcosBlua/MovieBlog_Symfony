{% extends 'baseReg.html.twig' %}

{% block body %}
    {{ parent() }}

    <br>

    <div class="container forma">
        <br>

        <h1 style="text-align:center"> Registro </h1>

        <br>

        {{form_start(formulario)}}

        <div class="form-group">
                <label for="inputUsername"> Usuario: </label>

                {{form_widget(formulario.username, { 'attr': {'class': 'form-control'} })}}
        </div>

        <div class="form-group">
                <label for="inputPassword"> Contraseña: </label>

                {{form_widget(formulario.password, { 'attr': {'class': 'form-control'} })}}            
        </div>

        <div class="form-group">
            <label> Imagen de Perfil: </label>

            <img src={{formulario.imagenPerfil.vars.value}} width="80px" heigth="80px" style="border-radius: 100%;"/>

            {{form_widget(formulario.imagenPerfil, { 'attr': {'class': 'form-control'} })}}
        </div>

        {{form_end(formulario)}}

        <br>

        <h6 style="text-align:center"> ¿Ya tiene cuenta? <a href="{{ path('app_login') }}"> Inicie Sesión </a></h6>

    </div>

    <br>

{% endblock %}